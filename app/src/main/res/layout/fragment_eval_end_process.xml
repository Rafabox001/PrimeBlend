<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.manguitostudios.primeblend.fragments.EvaluacionFirstFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:id="@+id/container"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:id="@+id/transparency"/>

    <LinearLayout
        android:id="@+id/purchase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/purchase"
            android:textColor="@color/white"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="@dimen/internal_margin"
            android:layout_marginStart="@dimen/internal_margin"
            android:layout_marginRight="@dimen/internal_margin"
            android:layout_marginEnd="@dimen/internal_margin"/>

        <Button
            android:id="@+id/yes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/op_yes"
            android:background="@color/buttonColor"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_marginTop="40dp"
            android:padding="20dp"
            android:layout_marginLeft="@dimen/margin_button"
            android:layout_marginStart="@dimen/margin_button"
            android:layout_marginRight="@dimen/margin_button"
            android:layout_marginEnd="@dimen/margin_button"
            android:textAllCaps="true"/>

        <Button
            android:id="@+id/no"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/op_no"
            android:background="@color/buttonColor"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:padding="20dp"
            android:layout_marginLeft="@dimen/margin_button"
            android:layout_marginStart="@dimen/margin_button"
            android:layout_marginRight="@dimen/margin_button"
            android:layout_marginEnd="@dimen/margin_button"
            android:textAllCaps="true"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/purchaseInfo"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/purchase_q1"
            android:textColor="@color/white"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="@dimen/internal_margin"
            android:layout_marginStart="@dimen/internal_margin"
            android:layout_marginRight="@dimen/internal_margin"
            android:layout_marginEnd="@dimen/internal_margin"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/internal_margin"
            android:layout_marginStart="@dimen/internal_margin"
            android:layout_marginRight="@dimen/internal_margin"
            android:layout_marginEnd="@dimen/internal_margin">

            <ImageView
                android:id="@+id/monogram"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="65dp"
                android:background="@drawable/monogram"
                android:layout_marginLeft="@dimen/small_separation"
                android:layout_marginStart="@dimen/small_separation"
                android:layout_marginRight="@dimen/small_separation"
                android:layout_marginEnd="@dimen/small_separation"/>

            <ImageView
                android:id="@+id/profile"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="65dp"
                android:background="@drawable/profile"
                android:layout_marginLeft="@dimen/small_separation"
                android:layout_marginStart="@dimen/small_separation"
                android:layout_marginRight="@dimen/small_separation"
                android:layout_marginEnd="@dimen/small_separation"/>

            <ImageView
                android:id="@+id/iomabe"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="65dp"
                android:background="@drawable/iomabe"
                android:layout_marginLeft="@dimen/small_separation"
                android:layout_marginStart="@dimen/small_separation"
                android:layout_marginRight="@dimen/small_separation"
                android:layout_marginEnd="@dimen/small_separation"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/small_separation"
            android:layout_marginLeft="@dimen/internal_margin"
            android:layout_marginStart="@dimen/internal_margin"
            android:layout_marginRight="@dimen/internal_margin"
            android:layout_marginEnd="@dimen/internal_margin">

            <EditText
                android:id="@+id/other"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="@string/other_hint"
                android:background="@color/transparency_white"
                android:layout_marginLeft="@dimen/small_separation"
                android:layout_marginStart="@dimen/small_separation"
                android:layout_marginRight="@dimen/small_separation"
                android:layout_marginEnd="@dimen/small_separation"/>

            <EditText
                android:id="@+id/amount"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="@string/amount_hint"
                android:inputType="number"
                android:background="@color/transparency_white"
                android:layout_marginLeft="@dimen/small_separation"
                android:layout_marginStart="@dimen/small_separation"
                android:layout_marginRight="@dimen/small_separation"
                android:layout_marginEnd="@dimen/small_separation"/>

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/despacho"
            android:textColor="@color/white"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="@dimen/internal_margin"
            android:layout_marginStart="@dimen/internal_margin"
            android:layout_marginRight="@dimen/internal_margin"
            android:layout_marginEnd="@dimen/internal_margin"/>

        <EditText
            android:id="@+id/despacho"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/internal_margin"
            android:layout_marginStart="@dimen/internal_margin"
            android:layout_marginRight="@dimen/internal_margin"
            android:layout_marginEnd="@dimen/internal_margin"
            android:background="@color/transparency_white"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/sucursal"
            android:textColor="@color/white"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="@dimen/internal_margin"
            android:layout_marginStart="@dimen/internal_margin"
            android:layout_marginRight="@dimen/internal_margin"
            android:layout_marginEnd="@dimen/internal_margin"/>

        <EditText
            android:id="@+id/sucursal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/internal_margin"
            android:layout_marginStart="@dimen/internal_margin"
            android:layout_marginRight="@dimen/internal_margin"
            android:layout_marginEnd="@dimen/internal_margin"
            android:background="@color/transparency_white"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/salesman"
            android:textColor="@color/white"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="@dimen/internal_margin"
            android:layout_marginStart="@dimen/internal_margin"
            android:layout_marginRight="@dimen/internal_margin"
            android:layout_marginEnd="@dimen/internal_margin"/>

        <EditText
            android:id="@+id/vendedor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/internal_margin"
            android:layout_marginStart="@dimen/internal_margin"
            android:layout_marginRight="@dimen/internal_margin"
            android:layout_marginEnd="@dimen/internal_margin"
            android:background="@color/transparency_white"/>

        <Button
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send"
            android:background="@color/buttonColor"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:padding="20dp"
            android:textAllCaps="true"/>


    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/privacy_text"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"
        android:layout_above="@+id/url"
        android:layout_marginLeft="@dimen/internal_margin"
        android:layout_marginStart="@dimen/internal_margin"
        android:layout_marginRight="@dimen/internal_margin"
        android:layout_marginEnd="@dimen/internal_margin"/>

    <TextView
        android:id="@+id/url"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/privacy_url"
        android:textColor="@color/buttonColor"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="@dimen/internal_margin"
        android:layout_marginStart="@dimen/internal_margin"
        android:layout_marginRight="@dimen/internal_margin"
        android:layout_marginEnd="@dimen/internal_margin"
        android:layout_alignParentBottom="true"/>



</RelativeLayout>