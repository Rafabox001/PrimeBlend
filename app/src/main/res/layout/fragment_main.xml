<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.manguitostudios.primeblend.fragments.MainActivityFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:id="@+id/container"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:id="@+id/transparency"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/evaluacion_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/evaluacion"
            android:background="@color/buttonColor"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:textSize="20sp"
            android:layout_marginLeft="@dimen/margin_button"
            android:layout_marginStart="@dimen/margin_button"
            android:layout_marginRight="@dimen/margin_button"
            android:layout_marginEnd="@dimen/margin_button"
            android:textAllCaps="true"/>

        <Button
            android:id="@+id/catalogo_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/catalogo"
            android:background="@color/buttonColor"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:textSize="20sp"
            android:layout_marginLeft="@dimen/margin_button"
            android:layout_marginStart="@dimen/margin_button"
            android:layout_marginRight="@dimen/margin_button"
            android:layout_marginEnd="@dimen/margin_button"
            android:textAllCaps="true"/>

        <Button
            android:id="@+id/cotizador_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/cotizador"
            android:background="@color/buttonColor"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:textSize="20sp"
            android:layout_marginLeft="@dimen/margin_button"
            android:layout_marginStart="@dimen/margin_button"
            android:layout_marginRight="@dimen/margin_button"
            android:layout_marginEnd="@dimen/margin_button"
            android:textAllCaps="true"/>

        <Button
            android:id="@+id/calendario_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/calendario"
            android:background="@color/buttonColor"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:padding="20dp"
            android:textSize="20sp"
            android:layout_marginLeft="@dimen/margin_button"
            android:layout_marginStart="@dimen/margin_button"
            android:layout_marginRight="@dimen/margin_button"
            android:layout_marginEnd="@dimen/margin_button"
            android:textAllCaps="true"/>

    </LinearLayout>



</RelativeLayout>
