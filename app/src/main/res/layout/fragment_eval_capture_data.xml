<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.manguitostudios.primeblend.fragments.RegisterFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:id="@+id/container"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:id="@+id/transparency"/>

    <LinearLayout
        android:id="@+id/newRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/intro_register"
            android:textColor="@color/white"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="@dimen/internal_margin"
            android:layout_marginStart="@dimen/internal_margin"
            android:layout_marginRight="@dimen/internal_margin"
            android:layout_marginEnd="@dimen/internal_margin"/>

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray"
            android:background="@color/transparency_white"
            android:hint="@string/name_hint"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/internal_margin"
            android:layout_marginStart="@dimen/internal_margin"
            android:layout_marginRight="@dimen/internal_margin"
            android:layout_marginEnd="@dimen/internal_margin"/>

        <EditText
            android:id="@+id/mail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/mail_hint"
            android:textColor="@color/text_gray"
            android:background="@color/transparency_white"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/internal_margin"
            android:layout_marginStart="@dimen/internal_margin"
            android:layout_marginRight="@dimen/internal_margin"
            android:layout_marginEnd="@dimen/internal_margin"/>

        <EditText
            android:id="@+id/phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/phone_hint"
            android:textColor="@color/text_gray"
            android:background="@color/transparency_white"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/internal_margin"
            android:layout_marginStart="@dimen/internal_margin"
            android:layout_marginRight="@dimen/internal_margin"
            android:layout_marginEnd="@dimen/internal_margin"/>

        <EditText
            android:id="@+id/job"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ocupation_hint"
            android:textColor="@color/text_gray"
            android:background="@color/transparency_white"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/internal_margin"
            android:layout_marginStart="@dimen/internal_margin"
            android:layout_marginRight="@dimen/internal_margin"
            android:layout_marginEnd="@dimen/internal_margin"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/interested"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/internal_margin"
            android:layout_marginStart="@dimen/internal_margin"
            android:layout_marginRight="@dimen/internal_margin"
            android:layout_marginEnd="@dimen/internal_margin"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/internal_margin"
            android:layout_marginStart="@dimen/internal_margin"
            android:layout_marginRight="@dimen/internal_margin"
            android:layout_marginEnd="@dimen/internal_margin">

            <ImageView
                android:id="@+id/monogram"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="65dp"
                android:background="@drawable/monogram"
                android:layout_marginLeft="@dimen/small_separation"
                android:layout_marginStart="@dimen/small_separation"
                android:layout_marginRight="@dimen/small_separation"
                android:layout_marginEnd="@dimen/small_separation"/>

            <ImageView
                android:id="@+id/profile"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="65dp"
                android:background="@drawable/profile"
                android:layout_marginLeft="@dimen/small_separation"
                android:layout_marginStart="@dimen/small_separation"
                android:layout_marginRight="@dimen/small_separation"
                android:layout_marginEnd="@dimen/small_separation"/>

            <ImageView
                android:id="@+id/iomabe"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="65dp"
                android:background="@drawable/iomabe"
                android:layout_marginLeft="@dimen/small_separation"
                android:layout_marginStart="@dimen/small_separation"
                android:layout_marginRight="@dimen/small_separation"
                android:layout_marginEnd="@dimen/small_separation"/>

        </LinearLayout>

        <Button
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@color/buttonColor"
            android:text="@string/send"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/privacy_policy"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:textSize="12sp"
            android:layout_marginLeft="@dimen/internal_margin"
            android:layout_marginStart="@dimen/internal_margin"
            android:layout_marginRight="@dimen/internal_margin"
            android:layout_marginEnd="@dimen/internal_margin"/>




    </LinearLayout>

    <LinearLayout
        android:id="@+id/existingRegister"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/help_us"
            android:textColor="@color/white"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="@dimen/internal_margin"
            android:layout_marginStart="@dimen/internal_margin"
            android:layout_marginRight="@dimen/internal_margin"
            android:layout_marginEnd="@dimen/internal_margin"/>

        <EditText
            android:id="@+id/existing_mail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/mail_hint"
            android:textColor="@color/text_gray"
            android:background="@color/transparency_white"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/internal_margin"
            android:layout_marginStart="@dimen/internal_margin"
            android:layout_marginRight="@dimen/internal_margin"
            android:layout_marginEnd="@dimen/internal_margin"/>

        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:layout_gravity="center"
            android:background="@color/buttonColor"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textAllCaps="true"/>

    </LinearLayout>



</RelativeLayout>